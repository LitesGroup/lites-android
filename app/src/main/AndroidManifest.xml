<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.litesgroup">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".LitesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
        </activity>
        <activity android:name=".playground.PlaygroundActivity" />
        <activity
            android:name=".playground.RxJavaPlaygroundActivity"
            android:label="@string/title_activity_rx_java_playground">
        </activity>
    </application>

</manifest>